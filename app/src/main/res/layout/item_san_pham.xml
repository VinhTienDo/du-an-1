<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_margin="15dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:background="@drawable/khung">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageSP"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/iconcamera"
                android:scaleType="fitCenter"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:layout_weight="10">
        <TextView
            android:id="@+id/tvMasanpham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Mã sản phẩm: "/>
        <TextView
            android:id="@+id/tvTensanpham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Tên sản phẩm :"/>
        <TextView
            android:id="@+id/tvTenloai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Tên loại: "/>
        <TextView
            android:id="@+id/tvGiasanpham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Giá sản phẩm:"/>
        <TextView
            android:id="@+id/tvSoluongban"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:text="Số lượng bán:"/>



            <ImageView
                android:id="@+id/imgDeleteSp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_delete"/>
        </LinearLayout>



    </LinearLayout>
    </LinearLayout>

</LinearLayout>